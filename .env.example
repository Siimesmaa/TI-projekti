# Server Configuration
# Port the server listens on (default: 3000)
PORT=3000

# Host the server binds to (default: 0.0.0.0 for all interfaces)
# Use 0.0.0.0 to allow connections from other devices on network
# Use localhost to restrict to local connections only
HOST=0.0.0.0

# Simulator Configuration
# URL of the server to send telemetry to (default: localhost)
# Change this to your server's IP address when running simulator remotely
SERVER_URL=localhost

# Port of the server (default: 3000)
SERVER_PORT=3000
